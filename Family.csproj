<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="assets\chat.png" />
    <None Remove="assets\chores.png" />
    <None Remove="assets\data.png" />
    <None Remove="assets\logo.png" />
    <None Remove="assets\milk.png" />
    <None Remove="assets\profile.jpg" />
    <None Remove="assets\welcome.png" />
    <None Remove="assets\welcome3.png" />
    <None Remove="assets\welcome4.png" />
    <None Remove="assets\welcomebg2.png" />
    <None Remove="assets\welcomex.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="assets\chat.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\chores.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="assets\data.png">
