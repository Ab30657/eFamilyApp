<Window x:Class="Family.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Family"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:uBuilt="clr-namespace:Family.customcontrols"
        mc:Ignorable="d"
        Background="Transparent" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="MainWindow" Height="800" Width="1438" WindowStyle="None">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="resources/icons.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Border CornerRadius="30" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                    <Image Source="/assets/logo.png" Width="150" Height="150"/>

                    <uBuilt:MenuButton IsSelected="True" Text="My Dashboard" Icon="{StaticResource Dashboard}" GroupName="MenuButton"/>

                    <uBuilt:MenuButton Text="Spending Report" Icon="{StaticResource Money}" GroupName="MenuButton"/>

                    <uBuilt:MenuButton Text="Chat" Icon="{StaticResource Chat}" GroupName="MenuButton"/>

                    <uBuilt:MenuButton Text="Accounts" Icon="{StaticResource Accounts}" GroupName="MenuButton"/>

                    <uBuilt:MenuButton Text="Settings" Icon="{StaticResource Settings}" GroupName="MenuButton"/>
                </StackPanel>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,35,0,0" >
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="My Dashboard" FontWeight="SemiBold" FontSize="18"/>
                    <Border Grid.Row="1" Padding="0,12,0,12">
                        <TextBlock Text="Loren Ipsum something something" Style="{StaticResource TitleText}"/>
                    </Border>
                </Grid>

                <Grid Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,35,40,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Background="White" Grid.Column="0" Orientation="Horizontal">
                        <StackPanel.Triggers>
                            <EventTrigger RoutedEvent="StackPanel.MouseEnter">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="profile"
                                                                Storyboard.TargetProperty="(Grid.Margin)"
                                                                Duration="0:0:0">
                                                <DiscreteThicknessKeyFrame Value="14,10" KeyTime="0:0:0"/>
                                            </ThicknessAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetName="profile"
                                                             Storyboard.TargetProperty="(Grid.Width)"
                                                             To="150" Duration="0:0:0.2"/>
                                            </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                            <EventTrigger RoutedEvent="StackPanel.MouseLeave">
                                <EventTrigger.Actions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ThicknessAnimationUsingKeyFrames Storyboard.TargetName="profile"
                                                                Storyboard.TargetProperty="(Grid.Margin)"
                                                                Duration="0:0:0">
                                                <DiscreteThicknessKeyFrame Value="0" KeyTime="0:0:0"/>
                                            </ThicknessAnimationUsingKeyFrames>
                                            <DoubleAnimation Storyboard.TargetName="profile"
                                                             Storyboard.TargetProperty="(Grid.Width)"
                                                             To="0" Duration="0:0:0.2"/>
                                            </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger.Actions>
                            </EventTrigger>
                        </StackPanel.Triggers>
                        <Ellipse Height="60" Width="60" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="/assets/profile.jpg" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                        <Grid x:Name="profile" Grid.Column="1" Margin="0" Width="0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="Amar Budhathoki" Style="{StaticResource MainText}"/>
                            <TextBlock Grid.Row="1" Text="Baglung" Style="{StaticResource TitleText}"/>
                        </Grid>
                    </StackPanel>


                    <Path Margin="15,0" HorizontalAlignment="Center" Grid.Column="1" Data="{StaticResource Notification}" Fill="{StaticResource ThemeColor}" Height="20" Width="20" Stretch="Uniform"/>
                    <Path Margin="15,0" HorizontalAlignment="Center" Grid.Column="2" Data="{StaticResource Shutdown}" Fill="{StaticResource ThemeColor}" Height="20" Width="20" Stretch="Uniform"/>
                </Grid>

                <Grid Grid.Row="1" Background="Transparent" Margin="40,0,50,40">
                    <Border Background="#F7F8FA" CornerRadius="20" Padding="20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Border CornerRadius="12">
                                <Border.Background>
                                    <ImageBrush ImageSource="/assets/welcomebg2.png"/>
                                </Border.Background>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Padding="30,20">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="3*"/>
                                                <RowDefinition Height="3*"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Style="{StaticResource TitleText}" Foreground="#f5f5f5" FontWeight="ExtraLight">
                                                <Run Text="Hello Amar,"/>
                                            </TextBlock>
                                            <TextBlock Grid.Row="1" Style="{StaticResource MainText}" FontSize="28" Foreground="White" VerticalAlignment="Center">
                                                <Run Text="Welcome to the eFam App"/>
                                            </TextBlock>
                                            <TextBlock TextWrapping="Wrap" Padding="0,0,20,0" Grid.Row="2" Style="{StaticResource TitleText}" Foreground="#f5f5f5">
                                                <Run Text="All about family project activities will be update here. Learn more about us online..."/>
                                            </TextBlock>
                                        </Grid>
                                    </Border>
                                    <Rectangle UseLayoutRounding="True" Grid.Column="1" Margin="-20,-50,10,10">
                                        <Rectangle.Fill>
                                            <ImageBrush ImageSource="/assets/welcomex.png" Stretch="Uniform">
                                            </ImageBrush>
                                        </Rectangle.Fill>
                                        <Rectangle.OpacityMask>
                                            <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                                                <LinearGradientBrush.GradientStops>
                                                    <GradientStop Offset="0.4" Color="Black"/>
                                                    <GradientStop Offset="1" Color="Transparent"/>
                                                </LinearGradientBrush.GradientStops>
                                            </LinearGradientBrush>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>
                                </Grid>
                            </Border>

                            <Border Margin="0,20,0,20" Grid.Row="1" Padding="5" CornerRadius="12" Background="White">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="Family Spendings Report" Padding="10,0,0,0"
                                               Style="{StaticResource MainText}" FontSize="22" HorizontalAlignment="Left"/>
                                    <Border Background="White"  Margin="0,0,0,0" Padding="10,0"  HorizontalAlignment="Right"  Grid.Row="0" Width="Auto" Height="Auto">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="reloadbtn"
                                                        Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                        To="90" Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="reloadbtn"
                                                        Storyboard.TargetProperty="(Path.RenderTransform).(RotateTransform.Angle)"
                                                        To="0" Duration="0:0:0.1"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <Path x:Name="reloadbtn" RenderTransformOrigin="0.5,0.5" Data="{StaticResource Refresh}" Fill="{StaticResource ThemeColor}" Stretch="UniformToFill" Height="18" Width="18">
                                            <Path.RenderTransform>
                                                <RotateTransform Angle="0"/>
                                            </Path.RenderTransform>
                                        </Path>
                                    </Border>
                                    

                                    <lvc:CartesianChart Margin="0,10,0,0" Grid.Row="1">
                                        <lvc:CartesianChart.Series>
                                            <lvc:LineSeries Values="{Binding SeriesCollection.Values}" LineSmoothness="1" FontSize="20" Stroke="{StaticResource ThemeColor}" PointGeometry="{x:Static lvc:DefaultGeometries.Circle}"  PointGeometrySize="10">
                                                <lvc:LineSeries.Fill>
                                                    <LinearGradientBrush Opacity="0.5" StartPoint="0.5,0" EndPoint="0.5,1">
                                                        <GradientStop Offset="0" Color="#00F260"/>
                                                        <GradientStop Offset="0.7" Color="#0575E6"/>
                                                        <GradientStop Offset="1.6" Color="Transparent"/>
                                                    </LinearGradientBrush>
                                                </lvc:LineSeries.Fill>
                                            </lvc:LineSeries>
                                        </lvc:CartesianChart.Series>
                                        <lvc:CartesianChart.AxisY>
                                            <lvc:Axis Title="Spending" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
                                        </lvc:CartesianChart.AxisY>
                                        <lvc:CartesianChart.AxisX>
                                            <lvc:Axis Title="Month" Labels="{Binding Labels}"></lvc:Axis>
                                        </lvc:CartesianChart.AxisX>
                                    </lvc:CartesianChart>
                                </Grid>
                            </Border>
                            <Border Grid.Row="2">
                                <Grid HorizontalAlignment="Center">
                                    <Grid.Resources>
                                    </Grid.Resources>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border x:Name="border1" SnapsToDevicePixels="True" UseLayoutRounding="True" Width="220" Margin="10" BorderThickness="3" BorderBrush="{StaticResource ThemeColor}" CornerRadius="12">
                                        <Border.Background>
                                            <LinearGradientBrush Opacity="0" x:Name="ThemeBrush" StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop x:Name="Green" Color="#00F260" Offset="0.0"/>
                                                <GradientStop x:Name="Blue" Color="#0575E6" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ThemeBrush"
                                                                                Storyboard.TargetProperty="(LinearGradientBrush.Opacity)" 
                                                                                To="1" Duration="0:0:0.5"/>
                                                            <ColorAnimation Storyboard.TargetName="GreenText"
                                                                            Storyboard.TargetProperty="Color"
                                                                            To="White" Duration="0:0:0.5"/>
                                                            <DoubleAnimation Storyboard.TargetName="GreenText"
                                                                            Storyboard.TargetProperty="Offset"
                                                                            To="1" Duration="0:0:0.5"/>
                                                            <DoubleAnimation To="240" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Width)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10,0" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10,0" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ThemeBrush"
                                                                                Storyboard.TargetProperty="(LinearGradientBrush.Opacity)" 
                                                                                To="0" Duration="0:0:0.5" />
                                                            <ColorAnimation Storyboard.TargetName="GreenText"
                                                                            Storyboard.TargetProperty="Color"
                                                                            To="#00F260" Duration="0:0:0.5"/>
                                                            <DoubleAnimation Storyboard.TargetName="GreenText"
                                                                            Storyboard.TargetProperty="Offset"
                                                                            To="0" Duration="0:0:0.5"/>
                                                            <DoubleAnimation To="220" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Width)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Panel.ZIndex="1" Orientation="Vertical" VerticalAlignment="Center">
                                                <TextBlock x:Name="ChatUser" Padding="10,0,0,0" Text="Olivia" Style="{StaticResource MainText}" FontSize="20">
                                                    <TextBlock.Foreground>
                                                        <LinearGradientBrush x:Name="TextThemeBrush" StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop x:Name="GreenText" Color="#00F260" Offset="0.0"/>
                                                            <GradientStop x:Name="BlueText" Color="#0575E6" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                                <TextBlock x:Name="DefaultChatFooter" Padding="10,0,10,0" Foreground="Blue" Text="has sent you a message" Opacity="0.6" FontWeight="Bold"></TextBlock>
                                            </StackPanel>
                                            <Rectangle  Grid.Column="1" Margin="-25,0,5,5" Panel.ZIndex="0">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/assets/chat.png" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                                <Rectangle.OpacityMask>
                                                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                        <LinearGradientBrush.GradientStops>
                                                            <GradientStop Offset="0.3" Color="Black"/>
                                                            <GradientStop Offset="1" Color="Transparent"/>
                                                        </LinearGradientBrush.GradientStops>
                                                    </LinearGradientBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </Grid>
                                        
                                    </Border>

                                    <Border Width="220" Margin="10" Background="{StaticResource ThemeColor}" Grid.Column="1" CornerRadius="12">
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation To="240" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Width)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10,0" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10,0" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation To="220" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Width)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <uBuilt:CircularProgressBar HorizontalAlignment="Left" Margin="10,5,0,5"
                                                    Value="4" ArcThickness="10"
                                                    IndicatorBrush="Blue"
                                                    BackgroundBrush="White"
                                                    Height="50" Width="50" PFontColor="White"/>
                                            <TextBlock Grid.Row="1" Grid.ColumnSpan="2" FontSize="12" Padding="10,0,0,0" FontWeight="Bold" Foreground="White" Text="Tasks remaining..."/>
                                            <TextBlock Grid.Row="2" FontSize="8.5" Foreground="White" Opacity="0.8" Padding="10,0,0,0" FontWeight="Bold" Grid.ColumnSpan="2" Text="Complete these tasks to receive your pocket money."/>
                                            <Rectangle Grid.Row="0" Margin="0,-20,0,-50" Grid.Column="1">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/assets/chores.png" Stretch="Uniform"/>
                                                </Rectangle.Fill>
                                                <Rectangle.OpacityMask>
                                                    <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                                        <LinearGradientBrush.GradientStops>
                                                            <GradientStop Offset="0.4" Color="Black"/>
                                                            <GradientStop Offset="1" Color="Transparent"/>
                                                        </LinearGradientBrush.GradientStops>
                                                    </LinearGradientBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>


                                        </Grid>
                                    </Border>

                                    <Border Width="220" Margin="10" BorderThickness="3" BorderBrush="{StaticResource ThemeColor}" Grid.Column="2" CornerRadius="12">
                                        <Border.Background>
                                            <LinearGradientBrush Opacity="0" x:Name="ThemeBrush2" StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#00F260" Offset="0.0"/>
                                                <GradientStop Color="#0575E6" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Border.Triggers>
                                            <EventTrigger RoutedEvent="Border.MouseEnter">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ThemeBrush2"
                                                                                Storyboard.TargetProperty="(LinearGradientBrush.Opacity)" 
                                                                                To="1" Duration="0:0:0.5"/>
                                                            <ColorAnimation Storyboard.TargetName="Green2"
                                                                            Storyboard.TargetProperty="Color"
                                                                            To="White" Duration="0:0:0.5"/>
                                                            <DoubleAnimation Storyboard.TargetName="Green2"
                                                                            Storyboard.TargetProperty="Offset"
                                                                            To="1" Duration="0:0:0.5"/>
                                                            <ColorAnimation Storyboard.TargetName="PathThemeBrush"
                                                                            Storyboard.TargetProperty="Color"
                                                                            To="White" Duration="0:0:0.5"/>
                                                            <DoubleAnimation To="50" Duration="0:0:0.2" Storyboard.TargetName="download" Storyboard.TargetProperty="(Path.Height)" AutoReverse="False" />
                                                            <DoubleAnimation To="240" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Width)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10,0" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10,0" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="Border.MouseLeave">
                                                <EventTrigger.Actions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetName="ThemeBrush2"
                                                                                Storyboard.TargetProperty="(LinearGradientBrush.Opacity)" 
                                                                                To="0" Duration="0:0:0.5" />
                                                            <ColorAnimation Storyboard.TargetName="Green2"
                                                                            Storyboard.TargetProperty="Color"
                                                                            To="#00F260" Duration="0:0:0.5"/>
                                                            <DoubleAnimation Storyboard.TargetName="Green2"
                                                                            Storyboard.TargetProperty="Offset"
                                                                            To="0" Duration="0:0:0.5"/>
                                                            <ColorAnimation Storyboard.TargetName="PathThemeBrush"
                                                                            Storyboard.TargetProperty="Color"
                                                                            To="#00F260" Duration="0:0:0.5"/>
                                                            <DoubleAnimation To="0" Duration="0:0:0.2" Storyboard.TargetName="download" Storyboard.TargetProperty="(Path.Height)" AutoReverse="False" />
                                                            <DoubleAnimation To="220" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Width)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                            <ThicknessAnimation To="10" Duration="0:0:0.2" Storyboard.TargetProperty="(Border.Margin)" AutoReverse="False" />
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </EventTrigger.Actions>
                                            </EventTrigger>
                                        </Border.Triggers>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Path x:Name="download" Margin="10,0,0,0" VerticalAlignment="Top" Data="{StaticResource Download}" Opacity="0.8" HorizontalAlignment="Left" Width="50" Height="0" Stretch="Uniform">
                                                <Path.Fill>
                                                    <SolidColorBrush x:Name="PathThemeBrush" Color="#00F260"/>
                                                </Path.Fill>
                                                <Path.OpacityMask>
                                                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                                                        <LinearGradientBrush.GradientStops>
                                                            <GradientStop Offset="0.4" Color="Black"/>
                                                            <GradientStop Offset="0.8" Color="Transparent"/>
                                                        </LinearGradientBrush.GradientStops>
                                                    </LinearGradientBrush>
                                                </Path.OpacityMask>
                                            </Path>
                                            <StackPanel  Orientation="Vertical" VerticalAlignment="Center">
                                                <TextBlock Padding="10,40,0,0" Text="102.8 GB" Style="{StaticResource MainText}" FontSize="20">
                                                    <TextBlock.Foreground>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                            <GradientStop x:Name="Green2" Color="#00F260" Offset="0.0"/>
                                                            <GradientStop x:Name="Blue2" Color="#0575E6" Offset="1.0"/>
                                                        </LinearGradientBrush>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                                <TextBlock Padding="10,0,0,0" Foreground="Blue" Text="Data used this week" Opacity="0.6" FontWeight="Bold"></TextBlock>
                                            </StackPanel>
                                            <Rectangle Grid.Column="1" Margin="0,0,5,0">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/assets/data.png" Stretch="Uniform">
                                                    </ImageBrush>
                                                </Rectangle.Fill>
                                                <Rectangle.OpacityMask>
                                                    <LinearGradientBrush StartPoint="1,1" EndPoint="0,1">
                                                        <LinearGradientBrush.GradientStops>
                                                            <GradientStop Offset="0.2" Color="Black"/>
                                                            <GradientStop Offset="1" Color="Transparent"/>
                                                        </LinearGradientBrush.GradientStops>
                                                    </LinearGradientBrush>
                                                </Rectangle.OpacityMask>
                                            </Rectangle>
                                        </Grid>
                                    </Border>
                                </Grid>
                            </Border>

                            <Grid Margin="15,-5,0,0" Grid.RowSpan="3" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Padding="15,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                                    <Run FontSize="30" Foreground="Black" FontFamily="Open Sans" FontWeight="SemiBold" Text="Grocery "/>
                                    <Run FontSize="30" Foreground="Black" FontFamily="Open Sans" FontWeight="Normal" Text="List"/>
                                    <LineBreak/>
                                    <Run Text="Updated by Emily Yesterday" FontSize="18" Foreground="Gray" FontWeight="SemiBold"/>
                                </TextBlock>
                                <Path Margin="10,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Top" Data="{StaticResource More}" Stretch="Uniform" Height="30" Width="30" Fill="{StaticResource ThemeColor}"/>
                                <uBuilt:CustomList Margin="0,70,0,0" HorizontalAlignment="Stretch"/>

                                <Border Grid.Row="1" Width="Auto" Margin="0,10" Background="{StaticResource ThemeColor}" BorderBrush="{StaticResource ThemeColor}" Grid.Column="2" CornerRadius="12">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="Border.MouseEnter">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetName="todoImage"
                                                                        Storyboard.TargetProperty="Height"
                                                                        To="50" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="todoTitle"
                                                                        Storyboard.TargetProperty="FontSize"
                                                                        To="24" Duration="0:0:0.2"/>
                                                        <ColorAnimation Storyboard.TargetName="todoDateTime"
                                                                        Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                        To="White" Duration="0:0:0.2"/>
                                                        <ColorAnimation Storyboard.TargetName="todoTitle"
                                                                        Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                        To="#ffe45e" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="Border.MouseLeave">
                                            <EventTrigger.Actions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation    Storyboard.TargetName="todoImage"
                                                                        Storyboard.TargetProperty="Height"
                                                                        To="120" Duration="0:0:0.2"/>
                                                        <DoubleAnimation Storyboard.TargetName="todoTitle"
                                                                         Storyboard.TargetProperty="FontSize"
                                                                         To="20" Duration="0:0:0.2"/>
                                                        <ColorAnimation Storyboard.TargetName="todoDateTime"
                                                                        Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                        To="#ffe45e" Duration="0:0:0.2"/>
                                                        <ColorAnimation Storyboard.TargetName="todoTitle"
                                                                        Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)"
                                                                        To="White" Duration="0:0:0.2"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger.Actions>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel  Orientation="Vertical" VerticalAlignment="Top">
                                            <Image x:Name="todoImage" Margin="10,-15,0,0" VerticalAlignment="Top" Source="/assets/game.png" Opacity="0.8" HorizontalAlignment="Left" Width="120" Height="120" Stretch="Uniform">
                                                <Image.OpacityMask>
                                                    <LinearGradientBrush StartPoint="1,0" EndPoint="1,1">
                                                        <LinearGradientBrush.GradientStops>
                                                            <GradientStop Offset="0.5" Color="Black"/>
                                                            <GradientStop Offset="1" Color="Transparent"/>
                                                        </LinearGradientBrush.GradientStops>
                                                    </LinearGradientBrush>
                                                </Image.OpacityMask>
                                            </Image>
                                            <TextBlock x:Name="todoTitle" Padding="10,0,0,0" Text="Gaming with Liam" Style="{StaticResource MainText}" Foreground="White" FontSize="20"/>
                                            <TextBlock x:Name="todoDateTime" Padding="10,0,0,0" Foreground="#ffe45e" Text="Sunday July 11 at 9:00 am" Opacity="1" FontWeight="Bold" FontSize="15"></TextBlock>
                                        </StackPanel>
                                        <Rectangle Grid.Column="1" Margin="0,5,-10,5">
                                            <Rectangle.Fill>
                                                <ImageBrush ImageSource="/assets/gaming.png" Stretch="Uniform">
                                                </ImageBrush>
                                            </Rectangle.Fill>
                                            <Rectangle.OpacityMask>
                                                <LinearGradientBrush StartPoint="1,1" EndPoint="0,1">
                                                    <LinearGradientBrush.GradientStops>
                                                        <GradientStop Offset="0.5" Color="Black"/>
                                                        <GradientStop Offset="1" Color="Transparent"/>
                                                    </LinearGradientBrush.GradientStops>
                                                </LinearGradientBrush>
                                            </Rectangle.OpacityMask>
                                        </Rectangle>
                                    </Grid>
                                </Border>

                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
